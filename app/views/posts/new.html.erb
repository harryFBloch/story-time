<h1>Start a New Story</h1>
<%= form_for @post, class: "col s12" do |f|%>
<div class = "red">
  <%= f.object.errors.full_messages.join(", ") if f.object.errors.any? %>
</div>
<br />
<div class = "row">
  <div class="input-field col s6" >
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="input-field col s6" >
    <%= f.collection_select :genre, Genre.all, :name, :name,{ prompt: "Choose a Genre" }, class: "browser-default" %>
  </div>

</div>
<div class="row">
  <img id="thumbnail" class = "col s6 offset-s3 circle responsive-img"/>
  </div>
<div class = "row">
  <%=f.label "Upload new image", class: "btn waves-effect waves-light orange darken-4", style: "color:white", for: "fileUploader", id: "image-button"%>
    <span style="display:none;">
      <%= f.file_field :image, id: "fileUploader",accept: 'image/png,image/jpeg', onchange: 'displayImage(this)'%>
    </span>
</div>
<%= f.submit "Submit Post", class: "btn waves-effect waves-light orange darken-4" %>
<% end %>
