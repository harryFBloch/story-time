<%= form_tag(posts_path, method: "get") do %>
<div class = "row valign-wrapper">
  <div class =  "input-field col l4">
    <%=text_field_tag :search_string, nil, placeholder: "Filter by Name" %>
  </div>
    <div class="input-field col l4">
        <%= collection_select :genre, :id, Genre.all,:id,:name,{:include_blank => 'Filter Genre'}, {class: "browser-default"}%>
    </div>
  <%= submit_tag "Search" , class: "btn waves-effect waves-light l4 orange darken-4", onclick: "searchButtonPressed()"%>
  </div>
<% end %>
<%= render partial: "posts", locals: {posts: @posts} %>
<span>Displaying</span> <span id="length-posts"><%= @posts.length%></span> of </span><span id="total-posts"><%= @total_posts%></span>
