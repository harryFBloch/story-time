<!DOCTYPE html>
<html>
  <head>
    <title>StoryTime</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Compiled and minified CSS -->
   <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/css/materialize.min.css">

   <!-- Compiled and minified JavaScript -->
   <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
  </head>
  <body>
    <nav>
      <div class="nav-wrapper blue-grey darken-2">
        <a href="<%= posts_path %>" class="brand-logo">Story Time</a>
        <ul id="nav-mobile" class="right down-on-med-and-down">
          <% if !logged_in? %>
            <li><a href="/users/new" >Sign Up</a></li>
            <li><a href= <%= signin_user_path %> >Login</a></li>
          <% else %>
            <li><%= link_to "New Story", new_post_path %></li>
            <li><%= link_to "Logout", logout_user_path %></li>
          <% end %>
        </ul>
      </div>
    </nav>
    <div class="container">
      <h3 class = "red"><%= flash[:error] if flash[:error] %></h3>
      <%= yield %>
    </div>
    <br />
    <footer class="page-footer blue-grey darken-2">
          <div class="container">
            <div class="row">
              <div class="col l6 s12">
                <h5 class="white-text">Story Time</h5>
              </div>
              <div class="col l4 offset-l2 s12">
                <ul>
                  <li><a class="grey-text text-lighten-3" href="<%= logout_user_path %>">Logout</a></li>
                </ul>
              </div>
            </div>
          </div>
          <div class="footer-copyright">
            <div class="container">
            Â© 2018 Harry Bloch
            </div>
          </div>
        </footer>

  </body>
</html>
